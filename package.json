{
  "name": "mi-app-maquinaria-workspace",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run --workspace=frontend dev",
    "dev:frontend": "npm run --workspace=frontend dev",
    "build": "npm run build:frontend",
    "build:frontend": "npm run --workspace=frontend build",
    "start": "npm run --workspace=frontend start",
    "lint": "npm run --workspace=frontend lint",
    "test": "npm run --workspace=frontend test",
    "cypress:open": "npm run --workspace=frontend cypress:open",
    "cypress:run": "npm run --workspace=frontend cypress:run",
    "test:e2e": "npm run --workspace=frontend test:e2e",
    "migrate-user-data": "node scripts/migrate-user-data.js",
    "migrate-user-data:dry-run": "node scripts/migrate-user-data.js --dry-run"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "eslint": "^9",
    "glob": "^11.0.2",
    "postcss": "^8",
    "tailwindcss": "^3.4.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "dotenv": "^17.0.0",
    "html2canvas": "^1.4.1",
    "node-fetch": "^3.3.2"
  }
}
